<div class="container main-content">
  <div class="masonry" id="masonry-container">
  <% if !@cities.any? %>
    <h2>Sorry! We were unable to find any vacations within your budget.</h2>
    <% else %>
      <% @cities.each do |city| %>
      <div class="box masonry-brick"><img src="<%=city.img %>" class="img-responsive"><a href type="text" data-toggle="modal" data-target="#modal<%= city.city_name %>"><%= city.city_name %>, <%= city.country_name %></a><br>Daily Average Cost: $<%= '%.2f' % city.daily_average_cost %></div>
    <% end %>
  <% end %>
  </div>
</div>


<% @cities.each do |city| %>
<div class="modal fade" id="modal<%= city.city_name %>" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
    <h2><%= city.city_name %></h2>
      <div class="modal-header">

        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<% end %>
